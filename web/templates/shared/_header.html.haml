%nav.color-navbar{role: "navigation"}
  .nav-wrapper
    .brand-logo.left
      = link "Chat Up", to: page_path(@conn, :index)

    %ul.right
      %li= link "Rooms", to: room_path(@conn, :index)

- if (get_flash(@conn, :info) != nil) do
  .card-panel.blue.lighten-1.white-text
    %b Heads Up!
    = get_flash(@conn, :info)

- if (get_flash(@conn, :error) != nil) do
  .card-panel.red.lighten-1.white-text
    %b Hey!
    = get_flash(@conn, :error)
