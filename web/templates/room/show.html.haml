%nav.grey.darken-1
  .nav-wrapper.pad-sides.z-depth-1.grey.darken-1
    .col.s12
      = link to: room_path(@conn, :index), class: "breadcrumb" do
        = svg_icon "home"
      - end
      %span.breadcrumb= @room.name

%ul.right.side-nav.fixed#slide-out
  %li.sidebar-header Topics
  = for topic <- @room.topics do
    %li
      = link to: topic_path(@conn, :show, topic), class: "collection-item" do
        = topic.name
      - end
  - end

%a.button-collapse{href: "#", data-activates="slide-out"} Sidebar

.fixed-action-btn
  %a.btn-floating.btn-large.blue= svg_icon "menu"
  %ul
    %li
      %a.btn-floating.red.waves-effect.tooltipped{data-position: "left", data-delay: "50", data-tooltip: "Delete Room"}= svg_icon "delete"
    %li
      = link to: room_path(@conn, :edit, @room), class: "btn-floating orange waves-effect tooltipped", "data-position": "left", "data-delay": "50", "data-tooltip": "Edit Room" do
        = svg_icon "mode_edit"
      - end
    %li
      = link to: topic_path(@conn, :new, room_id: @room.id), class: "btn-floating green waves-effect tooltipped", "data-position": "left", "data-delay": "50", "data-tooltip": "New Topic" do
        = svg_icon "add"
      - end
